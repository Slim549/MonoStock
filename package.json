{
  "name": "sanitary-innovations",
  "version": "1.0.0",
  "description": "Sanitary Innovations Electron App",
  "author": "Blaine Smith",
  "main": "./main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.blaine.sanitaryinnovations",
    "productName": "Sanitary Innovations",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "dependencies": {
    "exceljs": "^4.4.0",
    "pdfkit": "^0.17.2"
  },
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0"
  }
}
